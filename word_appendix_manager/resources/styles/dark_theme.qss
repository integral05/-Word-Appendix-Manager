/*
===============================================================================
DARK THEME STYLESHEET
Modern dark theme with high contrast and blue accents
===============================================================================
*/

/* =============================================================================
   DARK THEME SPECIFIC OVERRIDES
============================================================================= */

QMainWindow {
    background-color: #1e1e1e;
}

QWidget {
    background-color: transparent;
    color: #cccccc;
}

/* Group Boxes Dark */
QGroupBox {
    color: #cccccc;
    border: 1px solid #3e3e42;
    background-color: #252526;
}

QGroupBox::title {
    color: #cccccc;
}

/* Drag Drop Area Dark Theme Specific */
QFrame[class="drag-drop"] {
    border: 2px dashed #3e3e42;
    border-radius: 8px;
    background-color: #252526;
}

QFrame[class="drag-drop"]:hover {
    border-color: #007acc;
    background-color: #2d2d30;
}

QFrame[class="drag-drop-active"] {
    border: 2px dashed #007acc;
    background-color: #094771;
}

/* Status Badge Colors */
QLabel[class="status-valid"] {
    background-color: #4ec9b0;
    color: #1e1e1e;
}

QLabel[class="status-warning"] {
    background-color: #ce9178;
    color: #1e1e1e;
}

QLabel[class="status-error"] {
    background-color: #f48771;
    color: #1e1e1e;
}

QLabel[class="status-info"] {
    background-color: #007acc;
    color: white;
}

/* PDF Preview Empty State */
QLabel[class="preview-empty"] {
    color: #656565;
    background-color: #252526;
    border: 2px dashed #3e3e42;
}

/* PDF Preview Error State */
QLabel[class="preview-error"] {
    color: #f48771;
    background-color: #2d1f1f;
    border: 2px solid #f48771;
}

/* Header Frame */
QFrame[class="header"] {
    background-color: #252526;
    border: 1px solid #3e3e42;
}

/* File Info Labels */
QLabel[class="file-name"] {
    color: #cccccc;
    font-weight: bold;
}

QLabel[class="file-details"] {
    color: #999999;
}

/* Page Badge */
QLabel[class="page-badge"] {
    background-color: #094771;
    border: 1px solid #007acc;
    color: #cccccc;
    border-radius: 10px;
    padding: 2px 8px;
}

/* Warning Text */
QLabel[class="warning-text"] {
    color: #ce9178;
}

/* Appendix Item Widget Status Indicators */
QFrame[class="status-valid"] {
    background-color: #4ec9b0;
    border: 1px solid #399f89;
}

QFrame[class="status-warning"] {
    background-color: #ce9178;
    border: 1px solid #b67c5f;
}

QFrame[class="status-error"] {
    background-color: #f48771;
    border: 1px solid #d66c5a;
}

/* Appendix Number Label */
QLabel[class="appendix-number"] {
    color: #007acc;
    font-weight: bold;
}

/* Tree Widget Dark */
QTreeWidget {
    background-color: #1e1e1e;
    alternate-background-color: #252526;
}

QTreeWidget::item:selected {
    background-color: #094771;
    color: #cccccc;
}

QTreeWidget::item:hover:!selected {
    background-color: #2d2d30;
}

