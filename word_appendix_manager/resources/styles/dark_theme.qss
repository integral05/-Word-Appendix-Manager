/* Progress Dialog Dark */
QProgressDialog {
    background-color: #252526;
}

/* Separator Line */
QFrame[frameShape="4"] { /* HLine */
    background-color: #3e3e42;
}

QFrame[frameShape="5"] { /* VLine */
    background-color: #3e3e42;
}

/* Special Button States for Dark Theme */
QPushButton[class="success"] {
    background-color: #0e6a4e;
    color: white;
}

QPushButton[class="success"]:hover {
    background-color: #117d5c;
}

QPushButton[class="warning"] {
    background-color: #9b5d2b;
    color: white;
}

QPushButton[class="warning"]:hover {
    background-color: #b26d38;
}

QPushButton[class="danger"] {
    background-color: #c24038;
    color: white;
}

QPushButton[class="danger"]:hover {
    background-color: #d64e45;
}

/* Text Edit with Warnings */
QTextEdit[class="warnings"] {
    background-color: #2d2420;
    border: 1px solid #ce9178;
    color: #ce9178;
}

/* Link Styling */
QLabel[class="link"] {
    color: #007acc;
}

QLabel[class="link"]:hover {
    color: #1e8dd6;
    text-decoration: underline;
}

/* Code/Monospace Text */
QLabel[class="code"], QLineEdit[class="code"], QTextEdit[class="code"] {
    font-family: 'Consolas', 'Courier New', monospace;
    background-color: #2d2d30;
    border: 1px solid #3e3e42;
}

/* Selection Colors */
QWidget:focus {
    selection-background-color: #094771;
    selection-color: #cccccc;
}

/* Disabled State Override */
QWidget:disabled {
    color: #656565;
}

/* Placeholder Text */
QLineEdit::placeholder, QTextEdit::placeholder {
    color: #656565;
}
